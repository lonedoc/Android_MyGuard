<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common -->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80%</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/blue_500</item>
    </style>
    <style name="LightSpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/round_background
        </item>
        <item name="android:popupBackground">@drawable/round_background
        </item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="DarkSpinnerTheme" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:text">#8D8D93</item>
    </style>
    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_500</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/blue_500</item>
    </style>

</resources>